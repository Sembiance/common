vendors = webkit moz o official	// @stylint ignore

border-radius()
	-webkit-border-radius arguments
	-moz-border-radius arguments
	border-radius arguments

border-image()
	-webkit-border-image arguments
	-moz-border-image arguments
	-o-border-image arguments

box-sizing()
	-webkit-box-sizing arguments
	-moz-box-sizing arguments
	-o-box-sizing arguments
	box-sizing arguments

opacity(n)
	opacity n
	if support-for-ie
		-ms-filter "progid:DXImageTransform.Microsoft.Alpha(Opacity=" + round(n * 100) + ")"
		filter unquote("progid:DXImageTransform.Microsoft.Alpha(Opacity=" + round(n * 100) + ")")

box-shadow()
	-webkit-box-shadow arguments
	-moz-box-shadow arguments
	box-shadow arguments

appearance()
	-webkit-appearance arguments
	-moz-appearance arguments
	appearance arguments

my-transition()
	-webkit-transition arguments
	-moz-transition arguments
	-ms-transition arguments
	-o-transition arguments
	transition arguments

transition-box-shadow()
	-webkit-transition -webkit-box-shadow arguments
	-moz-transition -moz-box-shadow arguments
	-ms-transition -ms-box-shadow arguments
	-o-transition -o-box-shadow arguments
	transition box-shadow arguments

transition-transform()
	-webkit-transition -webkit-transform arguments
	-moz-transition -moz-transform arguments
	-ms-transition -ms-transform arguments
	-o-transition -o-transform arguments

transform()
	-webkit-transform arguments
	-moz-transform arguments
	-ms-transform arguments
	-o-transform arguments
	transform arguments

transform-origin()
	-webkit-transform-origin arguments
	-moz-transform-origin arguments
	-ms-transform-origin arguments
	-o-transform-origin arguments
	transform-origin arguments

background-size()
	-webkit-background-size arguments
	-moz-background-size arguments
	-o-background-size arguments
	background-size arguments

touch-action()
	-ms-touch-action arguments
	touch-action arguments

mask-image()
	-webkit-mask-image arguments
	-moz-mask-image arguments
	-o-mask-image arguments
	mask-image arguments

text-size-adjust()
	-webkit-text-size-adjust arguments
	-moz-text-size-adjust arguments
	-ms-text-size-adjust arguments
	text-size-adjust arguments

user-select()
	if arguments=="element"
		-webkit-user-select text
	else
		-webkit-user-select arguments

	-khtml-user-select arguments

	if arguments=="none"
		-moz-user-select -moz-none
	else
		-moz-user-select arguments

	-ms-user-select arguments
	user-select arguments

background-linear-gradient-legacy()
	background -webkit-gradient(arguments)

background-linear-gradient()
	background -webkit-linear-gradient(arguments)
	background -moz-linear-gradient(arguments)
	background -ms-linear-gradient(arguments)
	background -o-linear-gradient(arguments)
	background linear-gradient(arguments)

background-radial-gradient()
	background -webkit-radial-gradient(arguments)
	background -moz-radial-gradient(arguments)
	background -ms-radial-gradient(arguments)
	background -o-radial-gradient(arguments)
	background radial-gradient(arguments)

animation()
	-webkit-animation arguments
	-moz-animation arguments
	-o-animation arguments
	animation arguments

background-opacity(level, $r=0, $g=0, $b=0)
	background rgb($r, $g, $b)
	background rgba($r, $g, $b, level)

add-sprite(width, height, positionX, positionY, paddingTop, paddingRight, paddingBottom, paddingLeft)
	width width
	height height
	background-position positionX positionY
	background-repeat no-repeat
	background-clip content-box
	padding-top paddingTop
	padding-right paddingRight
	padding-bottom paddingBottom
	padding-left paddingLeft
	display inline-block

	&.selected
		background-position 50% 50%, positionX positionY
		background-repeat no-repeat, no-repeat
		background-clip border-box, content-box
